<p id="notice"><%= notice %></p>
<div class="row">
 <div class="col-md-7 offset-md-2">
  <h1 class="p-3 md-2 text-dark">Shoe_polish Plans </h1>

  <table>
    <thead>
      <tr>
        <th>タイトル</th>
        <th>時間</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.title %></td>
        <td><%= plan.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', plan, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan.id), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Destroy',plan_path(plan.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>


  <div class="pagination">
    <%= paginate(@plans) %>
  </div>


  <br>
    <%= link_to '予定を追加', new_plan_path, class: "btn btn-primary" %>
    <%= month_calendar events: @plans do |date, plans| %>
    <%= date.day %>
    <% plans.each do |plan| %>
  <div>
    <%= link_to plan.title, plan %>
  </div>
  <% end %>
  <% end %>
 </div>
</div>