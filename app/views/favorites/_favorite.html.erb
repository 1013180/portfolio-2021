<% if shoe.favorited_by?(current_user) %>
  <p>
      <%= link_to shoe_favorite_path(shoe,favorite), method: :delete, remote: true do %>
      ♥<%= shoe.favorites.count %> いいね
  <% end %>
  </p>
  <% else %>
  <p>
      <%= link_to shoe_favorites_path(shoe), method: :post, remote: true do %>
      ♡<%= shoe.favorites.count %> いいね
  <% end %>
  </p>
<% end %>