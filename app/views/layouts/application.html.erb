<!DOCTYPE html>
<html>
  <head>
    <title>Shoesproud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
     <header class="bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "ShoesProud", root_path, class: 'navbar-brand text-white' %>
          <ul class="navbar-nav ml-auto">
     <% if user_signed_in? %>
     <li>
      <%= render 'searches/search' %>
        <div class= "container-fluid">
         <div class=  "row.py-5.w-100">
          <div class=  "jscroll">
            <!--<=  render partial: 'user', collection: @search_products, as: "product", class: "jscroll" %>-->
          </div>
         </div>
        </div>
      </li>
     <li>
        <%= link_to '投稿フォーム', new_shoe_path %>
      </li>
      <li>
        <%= link_to "ユーザー一覧", users_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
       <% end %>
        </ul>
      </div>
     </nav>
    </header>
    <%= yield %>
  </body>
</html>
