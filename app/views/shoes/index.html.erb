<div class="row">
<div class="col-md-7 offset-md-2">
  <h1 class="p-3 md-2 bg-light text-dark">投稿靴一覧</h1>

</div>
<div class="col-md-1">
<%= link_to new_shoe_path, method: :get do %>
<i class="fas fa-plus-circle fa-3x"></i>
<% end %>
</div>
</div>
<div class="row">
<div class="col-md-8 offset-md-2">
<table class='table'>
 <thead>
  <tr>
    <th>投稿者</th>
    <th>シューズブランド</th>
    <th>シューズモデル・デザイン </th>
    <th>シューズサイズ</th>
  </tr>
 </thead>
</div>
</div>
<% @shoes.each do |shoe| %>



 <tr>
    <th>
     <%= link_to user_path(shoe.user.id) do %>
     <%= shoe.user.name %>
     <% end %>
    </th>
    <th><%= shoe.shoe_brand.brand_name %></th>
    <th>
     <%= link_to shoe_path(shoe.id) do %>
     <%= shoe.shoe_model %>
     <% end %>
    </th>
    <th><%= shoe.shoe_size.size %></th>
 </tr>
 <% end %>
</table>
<div class="text-center">
 <ul class="pagination">
  <%= paginate(@shoes) %>
 </ul>
</div>