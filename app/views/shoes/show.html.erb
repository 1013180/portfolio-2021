<div class="col-md-8 offset-md-2">
 <h1 class="p-3 md-2  text-dark">エイジング記録</h1>
</div>
<div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="text-center">
      <h2>＜BEFORE＞</h2>
      <% if @shoe.shoe_images.present? %>
        <% @shoe.shoe_images.each do |image| %>
         <%= attachment_image_tag image, :before_image, :fill, 200, 200, fallback: "", class: "default_image" %>
        <% end %>
      <% else %>
        画像はありません。
      <% end %>


      <h2>＜AFTER＞</h2>
      <% if @shoe.after_images.present? %>
        <% @shoe.after_images.each do |image| %>
         <%= attachment_image_tag image, :after_image, :fill, 200, 200, fallback: "", class: "default_image" %>
        <% end %>
      <% else %>
        画像はありません。
      <% end %>
       </div>
 </div>
</div>


  <div class="col-md-5 offset-md-4">
  <div class="text-center">

  <div class="form-group row">
    <p class="col-md-3 pt-1 mb-0">シューズブランド</p>
    <%= @shoe.shoe_brand.brand_name %>
  </div>

  <div class="form-group row">
    <p class="col-md-3 pt-1 mb-0">シューズモデル・デザイン</p>
    <%= @shoe.shoe_model %>
  </div>

  <div class="form-group row">
    <p class="col-md-3 pt-1 mb-0">シューズサイズ</p>
    <%= @shoe.shoe_size.size %>
  </div>

  <div class="form-group row">
    <p class="col-md-3 pt-1 mb-0">コメント</p>
    <%= @shoe.description %>
  </div>
  <div id="favorites_buttons_<%= @shoe.id %>">
    <%= render 'favorites/favorite', shoe: @shoe, favorite: @favorite %>
  </div>

  <div id="comments_area">
    <%= render 'comments/comment', shoe: @shoe, comment: @comment %>
  </div>
 </div>
</div>
