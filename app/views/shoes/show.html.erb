<div class="col-md-8 offset-md-2">
  <h1 class="p-3 md-2  text-dark">Aging Record</h1>
</div>
<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="text-center">
      <h2>【BEFORE】</h2>
      <% if @shoe.shoe_images.present? %>
        <% @shoe.shoe_images.each do |image| %>
        <%= attachment_image_tag image, :before_image, :fill, 200, 200, fallback: "", class: "default_image" %>
        <% end %>
      <% else %>
        画像はありません。
      <% end %>
      <div class="tag-box">
      <% @shoe.tags.each do |tag| %>
        <span class="label"><%= tag.name %></span>
      <% end %>
      <div>


      <h2>【AFTER】</h2>
      <% if @shoe.after_images.present? %>
        <% @shoe.after_images.each do |image| %>
         <%= attachment_image_tag image, :after_image, :fill, 200, 200, fallback: "", class: "default_image" %>
        <% end %>
      <% else %>
        画像はありません。
      <% end %>
      <div class="tag-box">
      <% @shoe.tags.each do |tag| %>
        <span class="label"><%= tag.name %></span>
      <% end %>
      <div>
       </div>
 　　</div>
　</div>


 <div class="col-md-5 offset-md-4">
   <div class="text-center">
    <table>
      <tr>
       <th>
          <div class="form-group row">
            <p class="col-md-3 pt-1 mb-0">Shoes_brand</p>
       </th>
       <th>
            <%= @shoe.shoe_brand.brand_name %>
          </div>
       </th>
      </tr>
      <tr>
       <th>
          <div class="form-group row">
            <p class="col-md-3 pt-1 mb-0">Shoes_model(design)</p>
        </th>
        <th>
            <%= @shoe.shoe_model %>
          </div>
        </th>
      </tr>
      <tr>
        <th>
          <div class="form-group row">
            <p class="col-md-3 pt-1 mb-0">Shoes_size</p>
        </th>
        <th>
            <%= @shoe.shoe_size.size %>
          </div>
        </th>
      </tr>
      <tr>
       <th>
          <div class="form-group row">
            <p class="col-md-3 pt-1 mb-0">introduction</p>
        </th>
        <th>
            <%= @shoe.description %>
          </div>
        </th>
      </tr>
      <tr>
        <th>
          <div class="form-group row">
            <p class="col-md-5 pt-0 mb-0">introductionの感情分析スコア</p>
        </th>
        <th>
            [<%= @shoe.score %>]
          </div>
        </th>
      </tr>
      <tr>
      <tr>
        <th>
          <div id="favorites_buttons_<%= @shoe.id %>">
            <%= render 'favorites/favorite', shoe: @shoe, favorite: @favorite %>
          </div>
        </th>
      </tr>
      <tr>
        <td>
          <div id="comments_area">
            <%= render 'comments/comment', shoe: @shoe, comment: @comment %>
          </div>
        </td>
      </tr>
      <tr>
        <% if @shoe.user==current_user %>
          <td>
            <div class="mt-5">
              <%= link_to "投稿を編集する", edit_shoe_path(@shoe.id), class: "btn btn-sm btn-success" %>
            </div>
          </td>
          <td>
            <div class="mt-5">
              <%= link_to '投稿を削除する', shoe_path(@shoe), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_shoe_#{@shoe.id}"%>
            </div>
          </td>
        <% end %>
        </div>
      </tr>
    </table>
   </div>
</div>
