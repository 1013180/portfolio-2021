<% if @shoe.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @shoe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="col-md-8 offset-md-2">
 <h1 class="p-3 md-2 bg-light text-dark">シューズ画像投稿フォーム</h1>
</div>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="form-group">

<%= form_with model: @shoe, url: shoes_path, method: :post, local:true do |f| %>

  <div class="form-group row">
    <p class="col-md-3 pt-1 mb-0">＜BEFORE＞</p>
    <%= f.attachment_field :shoe_images_before_images, multiple: true %>
  </div>

   <div class="form-group row">
    <p class="col-md-3 pt-1 mb-0">＜AFTER＞</p>
    <%= f.attachment_field :after_images_after_images, multiple: true %>
  </div>


  <div class="form-group row">
    <p class="col-md-3 pt-1 mb-0">シューズブランド</p>
    <%= f.collection_select :shoe_brand_id, ShoeBrand.all, :id , :brand_name %>
  </div>

   <div class="form-group row">
   <p class="col-md-3 pt-1 mb-0">シューズモデル・デザイン</p>
   <%= f.text_field :shoe_model %>
  </div>


  <div class="form-group row">
    <p class="col-md-3 pt-1 mb-0">シューズサイズ</p>
    <%= f.collection_select :shoe_size_id, ShoeSize.all, :id, :size %>
  </div>

  <div class="form-group row">
   <p class="col-md-3 pt-1 mb-0">コメント</p>
   <%= f.text_area :description, size: "25x13", class: "form-control" %>
  </div>


 <%= f.submit '新規登録', class: "btn btn-success" %>

 <% end %>
